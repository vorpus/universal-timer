{
  "name": "time-tracker",
  "version": "1.0.0",
  "description": "A lightweight menu bar time tracker for macOS",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "start": "electron-vite preview",
    "dist": "npm run build && electron-builder --mac",
    "test": "node --test test/*.test.js"
  },
  "build": {
    "appId": "com.universal-timer.app",
    "productName": "Universal Timer",
    "mac": {
      "icon": "resources/icon.icns",
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "files": [
      "out/**/*"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vorpus/universal-timer.git"
  },
  "keywords": [
    "timer",
    "time-tracker",
    "electron",
    "menubar"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vorpus/universal-timer/issues"
  },
  "homepage": "https://github.com/vorpus/universal-timer#readme",
  "devDependencies": {
    "@types/node": "^25.2.1",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "electron-vite": "^5.0.0",
    "typescript": "^5.9.3"
  }
}
